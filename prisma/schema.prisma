generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Customer {
  customer_code String    @id @map("_id") @db.ObjectId
  measures      Measure[]

  @@map("customers")
}

model Measure {
  measure_uuid     String   @id @default(uuid()) @map("_id") @db.ObjectId
  measure_datetime DateTime
  measure_type     String
  has_confirmed    Boolean
  image_url        String

  customer      Customer @relation(fields: [customer_code], references: [customer_code])
  customer_code String   @db.ObjectId

  @@map("measures")
}
